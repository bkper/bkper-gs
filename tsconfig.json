{
  "compilerOptions": {
    "module": "none",
    "experimentalDecorators": true,
    "lib": [ "esnext" ],
    "target": "ES2019", // Using V8 engine
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots" : ["node_modules/@bkper", "node_modules/@types" ]
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]

}